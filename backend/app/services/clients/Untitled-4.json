{
    "format": {
        "type": "json_schema",
        "name": "order_matisa",
        "schema": {
            "type": "object",
            "properties": {
                "number": {
                    "type": "string",
                    "description": "The number of the order. Usually provided as 'COMMANDE ACHAT'."
                },
                "items": {
                    "type": "array",
                    "description": "The items in the order",
                    "items": {
                        "$ref": "#/$defs/item_matisa"
                    }
                }
            },
            "required": [
                "number",
                "items"
            ],
            "additionalProperties": false,
            "$defs": {
                "item_matisa": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string",
                            "description": "The code of the item. Usually provided as 'R\u00e9f\u00e9rence article et d\u00e9signation'. The code is provided in digits in this format: XX-XX-XXX-XXXXX."
                        },
                        "description": {
                            "type": "string",
                            "description": "The description of the item. Usually provided as 'R\u00e9f\u00e9rence article et d\u00e9signation'. Consider description all but the code."
                        },
                        "quantity": {
                            "type": "number",
                            "description": "The quantity of items to order"
                        },
                        "unit_price": {
                            "type": "number",
                            "description": "The unit price of the item"
                        },
                        "deadline": {
                            "type": "string",
                            "description": "The deadline or due date for the item"
                        }
                    },
                    "required": [
                        "code",
                        "description",
                        "quantity",
                        "unit_price",
                        "deadline"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "strict": true
    }
}