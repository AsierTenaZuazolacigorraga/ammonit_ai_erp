{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYDEVD_CONTAINER_RANDOM_ACCESS_MAX_ITEMS": "15000",
                "PYDEVD_WARN_EVALUATION_TIMEOUT": "30",
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Device",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/device",
            "python": "${workspaceFolder}/device/.venv/bin/python",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/device/src/__main__.py",
            "justMyCode": false,
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "preLaunchTask": "refresh-env"
        },
        {
            "name": "Device OPC UA Server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/device",
            "python": "${workspaceFolder}/device/.venv/bin/python",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/device/tests/opc_ua_server.py",
            "justMyCode": false,
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "preLaunchTask": "refresh-env"
        },
        {
            "name": "Backend",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "envFile": "${workspaceFolder}/.env",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "localhost",
                "--port",
                "8000",
            ],
            "justMyCode": false,
            "jinja": true,
            "preLaunchTask": "refresh-env"
        },
        {
            "name": "Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend",
            "preLaunchTask": "refresh-client"
        },
    ]
}