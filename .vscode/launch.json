{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYDEVD_CONTAINER_RANDOM_ACCESS_MAX_ITEMS": "15000",
                "PYDEVD_WARN_EVALUATION_TIMEOUT": "30",
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Backend",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "src.__main__:app",
                "--reload",
                "--host",
                "localhost",
                "--port",
                "8000",
                "--app-dir",
                "backend"
            ],
            "env": {
                "PYDEVD_CONTAINER_RANDOM_ACCESS_MAX_ITEMS": "15000",
                "PYDEVD_WARN_EVALUATION_TIMEOUT": "30",
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend"
        },
    ]
}